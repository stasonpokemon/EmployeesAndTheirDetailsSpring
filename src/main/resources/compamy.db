CREATE DATABASE company;

use company;

CREATE TABLE details
(
    id      int NOT NULL AUTO_INCREMENT,
    name    VARCHAR(50),
    surname VARCHAR(50),
    age     int,
    address VARCHAR(100),
    PRIMARY KEY (id)
);

CREATE TABLE employees
(
    id         int NOT NULL AUTO_INCREMENT,
    department VARCHAR(50),
    email      VARCHAR(50),
    detail_id  int,
    PRIMARY KEY (id),
    FOREIGN KEY (detail_id) REFERENCES details (id)
);